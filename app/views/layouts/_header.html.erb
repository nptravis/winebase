<header>
<div class="header-container">
	
	<div class="logo">
		<h1>WineBase</h1>
	</div>
	
	<div class="session-links">
		<ul>
		<% if current_user.present? %>
			<li><p>Welcome <%=current_user.username%><img src=<%= current_user.image_url %> height="32" width="32" class="profile-image"></p></li>
			<li><%=link_to "Log Out", logout_path %></li>
		<% else %>
				<li><%= link_to "Login", login_path %></li>
        <li><%= link_to "Log via Google", "/auth/google_oauth2" %></li>
        <li><%= link_to "Sign Up", signup_path %></li>
		<% end%>
		</ul>
	</div>

</div>
</header>